@import '~vuetify/src/stylus/app'

.v-divider
	border-style: solid

.v-label.error--text
	animation: none !important

.v-toolbar--clipped
	z-index: 5

table.sample-table
	width: 100%
	table-layout: fixed
	border-spacing: 0px
	th
		@extend .body-2
		border-width: thin 0
	td
		vertical-align: top
		border-width: 0 0 thin 0
		word-wrap: break-word
	th
	td
		@extend .pa-1
		border-style: solid
		border-color: rgba(0,0,0,0.12)

table.guideline-table
	width: 100%
	border-spacing: 0px
	color: rgba(0,0,0,0.6)
	td
		@extend .py-1
		border-width: 0 0 thin 0
		border-style: solid
		border-color: rgba(0,0,0,0.12)
	tr > td:first-child
		@extend .body-2
		width: 120px
